<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFF"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlleaderboard"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:id="@+id/tvLeaderboardSno"
            android:text=""
            android:textColor="@color/black"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvLeaderboardSno"
            android:src="@drawable/cartoon1"
            android:id="@+id/ivLeaderboardImage"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvLeaderboardName"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivLeaderboardImage"
            android:layout_centerVertical="true"
            android:text="Name"
            android:maxWidth="145dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvLeaderboardScore"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/tvLeaderboardName"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_centerVertical="true"
            android:text="Score"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>